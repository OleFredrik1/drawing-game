#headline
  text-align center

input[type='radio']
  visibility hidden
  position absolute

input[type='radio'] + img
  cursor pointer
  border 2px solid transparent
  height 50px
  width 50px
  margin 10px
  border-radius 5px

input[type='radio']:checked + img
  border 2px solid red

#new-game-form
  background-color lightgray
  border-radius 10px
  padding 20px
